# File: render.yaml (Optional - for automatic Render deployment)
services:
  - type: web
    name: youtuber-news-bot
    env: node
    plan: free
    buildCommand: npm install
    startCommand: npm start
    envVars:
      - key: NODE_ENV
        value: production
      - key: TELEGRAM_BOT_TOKEN
        sync: false
      - key: RENDER_EXTERNAL_URL
        sync: false

